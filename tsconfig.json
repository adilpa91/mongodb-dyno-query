{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["query-builder.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "*.test.ts",
    "*.spec.ts",
    "test-*.ts",
    "examples.ts",
    "benchmark.ts",
    "nestjs-integration.ts",
    "query-config-manager.ts"
  ]
}
